# =============================================================================
# ИСХОДНОЕ ХРАНИЛИЩЕ (SOURCE)
# =============================================================================

# Обязательные параметры
SOURCE_AWS_ACCESS_KEY_ID=your_source_access_key_here
SOURCE_AWS_SECRET_ACCESS_KEY=your_source_secret_key_here
SOURCE_BUCKET_NAME=source-bucket-name

# Опциональные параметры
SOURCE_AWS_REGION=us-east-1
# SOURCE_ENDPOINT_URL=https://s3.amazonaws.com  # Для AWS можно не указывать
# SOURCE_ADDRESSING_STYLE=path  # path или virtual (по умолчанию virtual)
# SOURCE_VERIFY_SSL=true  # false для самоподписанных сертификатов


# =============================================================================
# ЦЕЛЕВОЕ ХРАНИЛИЩЕ (TARGET)
# =============================================================================

# Обязательные параметры
TARGET_AWS_ACCESS_KEY_ID=your_target_access_key_here
TARGET_AWS_SECRET_ACCESS_KEY=your_target_secret_key_here
TARGET_BUCKET_NAME=target-bucket-name

# Опциональные параметры
TARGET_AWS_REGION=us-west-2
# TARGET_ENDPOINT_URL=https://s3.amazonaws.com  # Для AWS можно не указывать
# TARGET_ADDRESSING_STYLE=path  # path или virtual (по умолчанию virtual)
# TARGET_VERIFY_SSL=true  # false для самоподписанных сертификатов


# =============================================================================
# НАСТРОЙКИ СИНХРОНИЗАЦИИ
# =============================================================================

MAX_WORKERS=10  # Количество потоков для параллельного копирования


# =============================================================================
# ПРИМЕРЫ ДЛЯ РАЗНЫХ ПРОВАЙДЕРОВ
